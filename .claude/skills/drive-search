#!/usr/bin/env python3
"""
Drive Search Skill

Search your Google Drive for files.

Usage:
  /drive-search "project proposal"
  /drive-search "type:pdf budget"
  /drive-search "modified:2026"

Calls the CC agent to search Google Drive.
"""

import sys
import subprocess
from pathlib import Path


AGENTS_DIR = Path(__file__).resolve().parent.parent.parent

def main():
    """Search Google Drive"""

    # Get search query from arguments
    if len(sys.argv) < 2:
        print("âŒ Please provide a search query!")
        print("\nUsage:")
        print('  /drive-search "project proposal"')
        print('  /drive-search "type:pdf budget"')
        print('  /drive-search "modified:2026"')
        return 1

    # Join all arguments as the query
    query = " ".join(sys.argv[1:])

    print(f"ðŸ” Searching Google Drive: {query}\n")
    print("=" * 70)

    # Run the CC agent
    message = f"Search my Google Drive for: {query}"

    try:
        result = subprocess.run(
            [
                "python", "-m", "agency", "debug", "test", "cc",
                "--message", message
            ],
            cwd=str(AGENTS_DIR),
            capture_output=False,
            text=True
        )

        return result.returncode

    except Exception as e:
        print(f"âŒ Error searching Drive: {e}")
        return 1


if __name__ == "__main__":
    sys.exit(main())
